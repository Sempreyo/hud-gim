//- Все примеси в этом файле должны начинаться c имени блока (header)
//- Упоминание имени блока в классах обязательно, без этого он не попадёт в сборку

mixin header(mods)

  //- Принимает:
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +header('some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' header--' + modsList[i].trim();
      }
    }

  header.header(class= allMods)&attributes(attributes)
    +menu()(class='header__menu')
    .container.container--large.header__container
      svg.logo.header__logo
        use(href= src.icon + 'logo-default')
      ul.header__nav
        li
          a.link.header__nav-link(href='', target='_blank') О клубе
        li
          a.link.header__nav-link(href='', target='_blank') Тренер
        li
          a.link.header__nav-link(href='', target='_blank') Цены
        li
          a.link.header__nav-link(href='', target='_blank') Отзывы
        li
          a.link.header__nav-link(href='', target='_blank') Контакты
      .header__burger
        .header__burger-line
      a.link.header__phone(href='tel:+79605552222') +7 960 555 22 22
      +button('link', 'Заказать звонок', 'secondary', '', '', '#')(class='header__call', data-hystmodal='#call')
